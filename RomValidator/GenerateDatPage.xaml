<Page x:Class="RomValidator.GenerateDatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:models="clr-namespace:RomValidator.Models"
      Title="Generate DAT File"
      d:DesignHeight="768"
      d:DesignWidth="1024"
      mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#2979FF" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDBDBD" /><Setter Property="Opacity" Value="0.7" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1E88E5" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CustomTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8" /><Setter Property="FontSize" Value="13" /><Setter Property="BorderThickness" Value="1" /><Setter Property="BorderBrush" Value="#BDBDBD" /><Setter Property="Background" Value="White" /><Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /><RowDefinition Height="Auto" /><RowDefinition Height="Auto" /><RowDefinition Height="*" /><RowDefinition Height="Auto" /><RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Generate DAT File" FontSize="22" FontWeight="Bold" Margin="0,0,0,15" Foreground="#1976D2" />

        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" /><ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox Name="FolderTextBox" Grid.Column="0" Style="{StaticResource CustomTextBoxStyle}" IsReadOnly="True" ToolTip="Selected folder path" />
            <Button Grid.Column="1" Content="Select Folder" Style="{StaticResource ActionButtonStyle}" Margin="10,0,0,0" Click="SelectFolderButton_Click" ToolTip="Choose a folder to hash its files" />
        </Grid>

        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" /><ColumnDefinition Width="*" /><ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Name:" FontWeight="SemiBold" Margin="0,0,0,5" />
                <TextBox Name="NameTextBox" Style="{StaticResource CustomTextBoxStyle}" ToolTip="DAT file header: Name (e.g., Sega - Mega Drive - Genesis)" />
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="5,0,5,0">
                <TextBlock Text="Description:" FontWeight="SemiBold" Margin="0,0,0,5" />
                <TextBox Name="DescriptionTextBox" Style="{StaticResource CustomTextBoxStyle}" ToolTip="DAT file header: Description" />
            </StackPanel>
            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                <TextBlock Text="Author:" FontWeight="SemiBold" Margin="0,0,0,5" />
                <TextBox Name="AuthorTextBox" Style="{StaticResource CustomTextBoxStyle}" ToolTip="DAT file header: Author" />
            </StackPanel>
        </Grid>

        <Border Grid.Row="3" BorderBrush="#BDBDBD" BorderThickness="1" CornerRadius="4" Margin="0,10,0,15" Background="White">
            <ListView Name="HashListView" BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Auto" AlternationCount="2" d:ItemsSource="{d:SampleData ItemCount=5}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="10,5" /><Setter Property="BorderThickness" Value="0,0,0,1" /><Setter Property="BorderBrush" Value="#E0E0E0" />
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="0"><Setter Property="Background" Value="White" /></Trigger>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1"><Setter Property="Background" Value="#F5F5F5" /></Trigger>
                            <Trigger Property="IsMouseOver" Value="True"><Setter Property="Background" Value="#E3F2FD" /></Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Filename" Width="250"><GridViewColumn.CellTemplate><DataTemplate DataType="models:GameFile"><TextBlock Text="{Binding FileName}" TextTrimming="CharacterEllipsis" ToolTip="{Binding FileName}" /></DataTemplate></GridViewColumn.CellTemplate></GridViewColumn>
                        <GridViewColumn Header="Size" Width="100"><GridViewColumn.CellTemplate><DataTemplate DataType="models:GameFile"><TextBlock Text="{Binding FileSize, StringFormat='{}{0:N0}'}" TextAlignment="Right" /></DataTemplate></GridViewColumn.CellTemplate></GridViewColumn>
                        <GridViewColumn Header="CRC32" Width="80"><GridViewColumn.CellTemplate><DataTemplate DataType="models:GameFile"><TextBlock Text="{Binding Crc32}" FontFamily="Consolas" ToolTip="{Binding ErrorMessage}" /></DataTemplate></GridViewColumn.CellTemplate></GridViewColumn>
                        <GridViewColumn Header="MD5" Width="240"><GridViewColumn.CellTemplate><DataTemplate DataType="models:GameFile"><TextBlock Text="{Binding Md5}" FontFamily="Consolas" ToolTip="{Binding ErrorMessage}" /></DataTemplate></GridViewColumn.CellTemplate></GridViewColumn>
                        <GridViewColumn Header="SHA1" Width="280"><GridViewColumn.CellTemplate><DataTemplate DataType="models:GameFile"><TextBlock Text="{Binding Sha1}" FontFamily="Consolas" ToolTip="{Binding ErrorMessage}" /></DataTemplate></GridViewColumn.CellTemplate></GridViewColumn>
                        <GridViewColumn Header="SHA256" Width="450"><GridViewColumn.CellTemplate><DataTemplate DataType="models:GameFile"><TextBlock Text="{Binding Sha256}" FontFamily="Consolas" ToolTip="{Binding ErrorMessage}" /></DataTemplate></GridViewColumn.CellTemplate></GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <Grid Grid.Row="4" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" /><ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" BorderBrush="#BDBDBD" BorderThickness="1" CornerRadius="4" Padding="1">
                <Grid>
                    <ProgressBar Name="HashProgressBar" Height="24" Background="White" Foreground="#4CAF50" BorderThickness="0" />
                    <TextBlock Name="ProgressText" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" />
                </Grid>
            </Border>
            <TextBlock Grid.Column="1" Name="FileCountText" Text="No files processed" Margin="10,0,0,0" VerticalAlignment="Center" />
        </Grid>

        <UniformGrid Grid.Row="5" Columns="4" HorizontalAlignment="Left">
            <Button Name="StartButton" Content="Start Hashing" Style="{StaticResource ActionButtonStyle}" Background="#4CAF50" Click="StartButton_Click" IsEnabled="False" ToolTip="Begin hashing files in the selected folder" />
            <Button Name="StopButton" Content="Stop" Style="{StaticResource ActionButtonStyle}" Background="#F44336" Click="StopButton_Click" IsEnabled="False" ToolTip="Cancel the hashing operation" />
            <Button Content="Reset" Style="{StaticResource ActionButtonStyle}" Background="#FF9800" Click="ResetButton_Click" ToolTip="Clear all data and start over" />
            <Button Name="ExportDatButton" Content="Export DAT" Style="{StaticResource ActionButtonStyle}" Background="#9C27B0" Click="ExportDatButton_Click" IsEnabled="False" ToolTip="Export the results to a DAT file" />
        </UniformGrid>
    </Grid>
</Page>
